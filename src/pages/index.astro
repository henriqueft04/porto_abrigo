    ],
    curriculumPage: 8,
    profileImageName: "Pedro.png",
  },
  {
    name: "Carla Sofia Vitoriano de Oliveira Dias",
    role: "Candidata a Secretária Regional para o Desenvolvimento",
    nucleus: "Terras de Santa Maria",
    description: "Técnica Superior Jurista, Chefe Adjunta do Núcleo Terras de Santa Maria.",
    image: "~/assets/images/equipa/carla.jpeg",
    stats: [
      { label: "Anos Escutismo", value: "15+" },
      { label: "Cargos", value: "5+" },
      { label: "Núcleo", value: "T. Sta Maria" }
    ],
    curriculumPage: 9,
    profileImageName: "Carla.png",
  },
  {
    name: "António Alberto dos Santos Alves",
    role: "Secretário Regional para Gestão Financeira",
    nucleus: "Porto",
