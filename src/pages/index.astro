    image: "~/assets/images/equipa/antiono_alberto.jpeg",
    stats: [
      { label: "Anos Escutismo", value: "30+" },
      { label: "Distinções", value: "1" },
      { label: "Experiência", value: "Sec. Regional" }
    ],
    curriculumPage: 11,
    profileImageName: "Alves.png",
  },
  {
    name: "Rui Daniel Silva Cafaro",
    role: "Secretário Regional para o Património",
    nucleus: "Norte",
    description: "Secretário Administrativo de Núcleo Norte e Chefe de Agrupamento Adjunto.",
    image: "~/assets/images/equipa/rui.jpeg",
    stats: [
      { label: "Anos Escutismo", value: "20+" },
      { label: "Cargos", value: "6+" },
